@model CentralisationV0.Models.Entities.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulaire de Connexion</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/styles/styleConnexion.css">
</head>
<body>
    <div class="split left">
        <div class="centered">
            <img src="~/Content/img/Login_Banner.png" alt="Background Image" />
        </div>

    <div class="split right">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "loginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <form id="loginForm" class="loginForm">
                    <div class="logo-nav">
                        <a href="Login.html" class="brand">
                            <img src="Content/img/Geomatic_Logo.png" style="width: 35%;" alt="Geomatic Logo" />
                        </a>
                    </div>
                    <h3>Connexion</h3>
                    <div class="form-group">
                        <label for="email">Adresse E-mail</label>

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de Passe</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" id="loginBtn">Se Connecter</button>
                </form>
            </div>
        }
        <img src="~/Content/img/Login_Pattern.jpg" alt="Bottom Image" class="bottom-image" />
    </div>


    <script src="~/Content/Scripts/script.js"></script>

</body>
</html>